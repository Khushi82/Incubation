<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<!-- <bean id="mob" class="com.epam.spring.Samsung"></bean> -->
	<context:component-scan
		base-package="com.epam.spring"></context:component-scan>

	<bean id="camera" class="com.epam.spring.Camera">
	</bean>

	<bean id="listexample" class="com.epam.spring.ListExample">
		<property name="list">
			<list>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</list>
		</property>

	</bean>

	<bean id="setexample" class="com.epam.spring.Set">
		<property name="set">
			<set>
				<value>3</value>
				<value>2</value>
				<value>2</value>
			</set>

		</property>
	</bean>

	<bean id="mapexample" class="com.epam.spring.Map">
		<property name="map">
			<map>
				<entry key="hey">
					<value>1</value>
				</entry>
			</map>
		</property>

	</bean>



</beans>